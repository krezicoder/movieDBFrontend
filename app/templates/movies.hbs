<div class="flex flex-row w-full my-10">
    <div class="w-1/6 ml-10 bg-gray-200 flex flex-col overflow-y-scroll">
        <LinkTo @route="movies.index" @query={{hash category="All" page=1}}>
            <div class="w-full py-2 px-0 bg-gray-100 border-b-2 border-black hover:bg-gray-200">
                <span class="px-2 ">All</span>
            </div>
        </LinkTo>
        {{#each @model as |category|}}
        <LinkTo @route="movies.index" @query={{hash category=category.title page=1}}>
            <div class="w-full py-2 px-0 bg-gray-100 border-b-2 border-black hover:bg-gray-200">
                <span class="px-2 ">{{category.title}} ({{category.moviesCount}})</span>
            </div>
        </LinkTo>
        {{/each}}
    </div>
    <div class="w-5/6 mr-10">{{outlet}}</div>
</div>